<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <id>dist</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${basedir}/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-javadoc.jar</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../btm-jetty6-lifecycle/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-javadoc.jar</exclude>
            </excludes>
            <outputDirectory>/integration</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../btm-tomcat55-lifecycle/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-javadoc.jar</exclude>
            </excludes>
            <outputDirectory>/integration</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/target/apidocs</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/doc/api</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/test/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/test</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/test/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/test</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include>license.txt</include>
                <include>build.xml</include>
                <include>doc/**/*</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble/release-notes</directory>
            <includes>
                <include>release-notes-${project.version}.txt</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble/3rdparty-licenses</directory>
            <includes>
                <include>*</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/test-lib</outputDirectory>
            <unpack>false</unpack>
            <scope>test</scope>
            <includes>
                <include>junit:*</include>
                <include>org.mockito:*</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>
