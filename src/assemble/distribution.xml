<assembly>
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${basedir}/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-javadoc.jar</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/apidocs</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/doc/api</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/test/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/test</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/test/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/test</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble</directory>
            <includes>
                <include>license.txt</include>
                <include>doc/**/*</include>
                <include>integration/**/*</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble/release-notes</directory>
            <includes>
                <include>release-notes-${project.version}.txt</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>/</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assemble/3rdparty-licenses</directory>
            <includes>
                <include>*</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>${project.groupId}:${project.artifactId}</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>